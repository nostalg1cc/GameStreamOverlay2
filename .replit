modules = ["dotnet", "dotnet-sdk"]

[nix]
channel = "stable-24_05"
packages = ["zip", "dotnet-sdk"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "build_video_overlay"

[[workflows.workflow]]
name = "build_video_overlay"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd VideoOverlay && dotnet build"

[deployment]
run = ["sh", "-c", "cd VideoOverlay && dotnet build && dotnet run"]
