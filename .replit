modules = ["dotnet"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "BuildAndRunVideoOverlay"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "run_video_overlay"

[[workflows.workflow]]
name = "BuildAndRunVideoOverlay"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd VideoOverlay && dotnet build && dotnet run"
waitForPort = 5000

[[workflows.workflow]]
name = "run_video_overlay"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd VideoOverlay && dotnet run"

[deployment]
run = ["sh", "-c", "cd VideoOverlay && dotnet build && dotnet run"]
